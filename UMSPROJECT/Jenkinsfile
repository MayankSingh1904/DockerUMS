pipeline {
    agent any
    environment {
        COMPOSE_FILE = 'docker-compose.yml'
    }
    stages {
        stage('Clone UMS Project') {
            steps {
                // If using GitHub/Bitbucket/GitLab integration
                checkout scm
            }
        }
        stage('Build ums-app Docker Image') {
            steps {
                echo 'ğŸ”¨ Building Docker image for ums-app...'
                sh 'docker-compose build ums-app'
            }
        }
        stage('Stop Existing App') {
            steps {
                echo 'ğŸ›‘ Stopping running containers...'
                sh 'docker-compose down'
            }
        }
        stage('Deploy Updated App') {
            steps {
                echo 'ğŸš€ Deploying updated ums-app container...'
                sh 'docker-compose up -d ums-app'
            }
        }
    }
    post {
        success {
            echo 'âœ… Deployment successful! App is live at http://localhost:8084'
        }
        failure {
            echo 'âŒ Deployment failed. Check the build logs for details.'
        }
    }
}
